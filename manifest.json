{
  "manifest_version": 2,
  "name": "VLCTechHub Publishing Addon",
  "description": "Publish events in VLCTechHub directly from Chrome",
  "version": "1.0",

  "background" : {
     "scripts": ["background.js"],
     "persistent": false
   },

  "page_action": {
    "default_icon": "img/icon.png",
    "default_popup": "popup.html",
    "default_title": "Publicar en VLCTechHub"
  },
  "permissions": [
    "declarativeContent", "activeTab"
  ],
  "content_scripts":
  [
    {
      "matches": ["*://*.meetup.com/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ]
}